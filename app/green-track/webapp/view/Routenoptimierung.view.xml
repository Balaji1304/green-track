<mvc:View
    controllerName="greentrack.controller.Routenoptimierung"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:mc="sap.suite.ui.microchart"
    xmlns:u="sap.ui.unified"
    displayBlock="true">

    <Page 
        showNavButton="true" 
        navButtonPress="onNavBack" 
        title="Routen-Optimierung"
        backgroundDesign="List">

        <content>
            <VBox class="sapUiLargeMargin">
                
                <f:Card class="sapUiMediumMarginBottom">
                    <f:content>
                        <VBox class="sapUiContentPadding">
                            <Title text="Neue Route planen" titleStyle="H3" class="sapUiSmallMarginBottom"/>
                            
                            <layout:Grid defaultSpan="L4 M12 S12" vSpacing="2" hSpacing="2">
                                <VBox>
                                    <Label text="Startpunkt" design="Bold"/>
                                    <Input value="Berlin, Logistikzentrum Süd" placeholder="Start eingeben" icon="sap-icon://map-2" height="3rem"/>
                                </VBox>
                                
                                <VBox>
                                    <Label text="Zielort" design="Bold"/>
                                    <Input value="München, Messegelände" placeholder="Ziel eingeben" icon="sap-icon://map" height="3rem"/>
                                </VBox>

                                <HBox alignItems="End">
                                    <VBox width="70%" class="sapUiSmallMarginEnd">
                                        <Label text="Fahrzeug &amp; Fracht" design="Bold"/>
                                        <Select width="100%" selectedKey="ev">
                                            <core:Item key="ev" text="GreenFleet: E-LKW (7.5t)"/>
                                            <core:Item key="diesel" text="Standard: Diesel (12t)"/>
                                        </Select>
                                    </VBox>
                                    <Button text="Berechnen" type="Emphasized" width="30%" icon="sap-icon://search"/>
                                </HBox>
                            </layout:Grid>
                        </VBox>
                    </f:content>
                </f:Card>

                <layout:Grid defaultSpan="L6 M6 S12" hSpacing="2" vSpacing="2">

                    <f:Card height="100%">
                        <f:header>
                            <card:Header 
                                title="Route A: Standard" 
                                subtitle="Via A9 (Fokus Geschwindigkeit)" 
                                iconSrc="sap-icon://history"
                                statusText="Basis" />
                        </f:header>
                        <f:content>
                            <VBox class="sapUiContentPadding" height="100%">
                                
                                <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiMediumMarginBottom">
                                    <VBox>
                                        <Label text="Geschätzte Kosten" />
                                        <ObjectNumber number="412,50" unit="EUR" state="None" class="sapMObjectNumberLarge" />
                                    </VBox>
                                    <ObjectStatus text="Teuer" state="Error" inverted="true" />
                                </HBox>

                                <List separatorStyle="None">
                                    <CustomListItem>
                                        <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMarginBottom">
                                            <HBox alignItems="Center">
                                                <core:Icon src="sap-icon://history" class="sapUiSmallMarginEnd" color="#595959"/>
                                                <VBox>
                                                    <Title text="5h 45min" level="H5"/>
                                                    <Label text="Fahrzeit (Ohne Pause)" size="Small"/>
                                                </VBox>
                                            </HBox>
                                        </HBox>
                                    </CustomListItem>
                                    
                                    <CustomListItem>
                                        <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMarginBottom">
                                            <HBox alignItems="Center">
                                                <core:Icon src="sap-icon://cloud" class="sapUiSmallMarginEnd" color="#BB0000"/>
                                                <VBox>
                                                    <Title text="145 kg" level="H5"/>
                                                    <Label text="CO₂-Emissionen" size="Small"/>
                                                </VBox>
                                            </HBox>
                                            <ObjectStatus text="Hoch" state="Error" />
                                        </HBox>
                                    </CustomListItem>

                                    <CustomListItem>
                                        <VBox class="sapUiSmallMarginTop">
                                            <HBox justifyContent="SpaceBetween">
                                                <Label text="Strecke" />
                                                <Text text="585 km" />
                                            </HBox>
                                            <HBox justifyContent="SpaceBetween" class="sapUiTinyMarginTop">
                                                <Label text="Mautgebühren" />
                                                <Text text="85,00 €" />
                                            </HBox>
                                        </VBox>
                                    </CustomListItem>
                                </List>

                                <VBox height="2rem" />
                                
                                <Button text="Standard Route wählen" width="100%" />
                            </VBox>
                        </f:content>
                    </f:Card>

                    <f:Card height="100%" class="sapUiBorderSuccess">
                        <f:header>
                            <card:Header 
                                title="Route B: GreenTrack Empfehlung" 
                                subtitle="Via A9 / B300 (Optimiert)" 
                                iconSrc="sap-icon://energy-saving-lightbulb"
                                statusText="Beste Wahl" />
                        </f:header>
                        <f:content>
                            <VBox class="sapUiContentPadding" height="100%">
                                
                                <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiMediumMarginBottom">
                                    <VBox>
                                        <Label text="Geschätzte Kosten" design="Bold"/>
                                        <ObjectNumber 
                                            number="365,00" 
                                            unit="EUR" 
                                            state="Success" 
                                            class="sapMObjectNumberLarge" 
                                            emphasized="true"/>
                                        <Label text="- 47,50 € gespart" state="Success" design="Bold" class="sapUiTinyMarginTop"/>
                                    </VBox>
                                    <ObjectStatus text="Empfohlen" state="Success" inverted="true" icon="sap-icon://accept"/>
                                </HBox>

                                <List separatorStyle="None">
                                    <CustomListItem>
                                        <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMarginBottom">
                                            <HBox alignItems="Center">
                                                <core:Icon src="sap-icon://history" class="sapUiSmallMarginEnd" color="#595959"/>
                                                <VBox>
                                                    <Title text="6h 10min" level="H5"/>
                                                    <Label text="+25min Fahrzeit" size="Small" design="Bold" />
                                                </VBox>
                                            </HBox>
                                        </HBox>
                                    </CustomListItem>
                                    
                                    <CustomListItem>
                                        <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMarginBottom">
                                            <HBox alignItems="Center">
                                                <core:Icon src="sap-icon://energy-saving-lightbulb" class="sapUiSmallMarginEnd" color="#2B7D2B"/>
                                                <VBox>
                                                    <Title text="104 kg" level="H5"/>
                                                    <Label text="CO₂-Emissionen (-28%)" size="Small" design="Bold"/>
                                                </VBox>
                                            </HBox>
                                            <mc:RadialMicroChart size="S" percentage="28" valueColor="Good" tooltip="28% Ersparnis"/>
                                        </HBox>
                                    </CustomListItem>

                                    <CustomListItem>
                                        <VBox class="sapUiSmallMarginTop">
                                            <HBox justifyContent="SpaceBetween">
                                                <Label text="Strecke" />
                                                <Text text="562 km (Kürzer)" />
                                            </HBox>
                                            <HBox justifyContent="SpaceBetween" class="sapUiTinyMarginTop">
                                                <Label text="Mautgebühren" />
                                                <Text text="62,00 €" />
                                            </HBox>
                                        </VBox>
                                    </CustomListItem>
                                </List>

                                <VBox height="2rem" />

                                <Button text="GreenTrack Route aktivieren" type="Emphasized" width="100%" icon="sap-icon://forward"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                </layout:Grid>
                
                <f:Card class="sapUiMediumMarginTop">
                    <f:header>
                        <card:Header title="Detail-Vergleich: Warum Eco?" iconSrc="sap-icon://compare" />
                    </f:header>
                    <f:content>
                        <layout:Grid defaultSpan="L4 M4 S12" class="sapUiContentPadding">
                            <VBox alignItems="Center">
                                <Title text="Stau-Wahrscheinlichkeit" level="H5" class="sapUiSmallMarginBottom"/>
                                <mc:BulletMicroChart size="M" scale="%" targetValue="100" forecastValue="80" showValue="true">
                                    <mc:actual>
                                        <mc:BulletMicroChartData value="15" color="Good" tooltip="Eco Route"/>
                                        <mc:BulletMicroChartData value="65" color="Error" tooltip="Standard Route"/>
                                    </mc:actual>
                                </mc:BulletMicroChart>
                                <Label text="Eco umfährt Nürnberger Kreuz" class="sapUiTinyMarginTop"/>
                            </VBox>

                            <VBox alignItems="Center">
                                <Title text="Profil &amp; Topografie" level="H5" class="sapUiSmallMarginBottom"/>
                                <HBox>
                                    <ObjectStatus text="Flach" state="Success" icon="sap-icon://trend-down" class="sapUiSmallMarginEnd"/>
                                    <Label text="vs." class="sapUiTinyMarginTop"/>
                                    <ObjectStatus text="Steigung" state="Warning" icon="sap-icon://trend-up" class="sapUiSmallMarginBegin"/>
                                </HBox>
                                <Label text="Weniger Energieverbrauch" class="sapUiTinyMarginTop"/>
                            </VBox>

                            <VBox alignItems="Center">
                                <Title text="Ladestopps (E-LKW)" level="H5" class="sapUiSmallMarginBottom"/>
                                <HBox alignItems="Center">
                                    <core:Icon src="sap-icon://charging-station" color="#2B7D2B" size="1.5rem" class="sapUiSmallMarginEnd"/>
                                    <Title text="2 Stopps" level="H3"/>
                                </HBox>
                                <Label text="High-Speed Charging verfügbar" class="sapUiTinyMarginTop"/>
                            </VBox>
                        </layout:Grid>
                    </f:content>
                </f:Card>

            </VBox>
        </content>
    </Page>
</mvc:View>